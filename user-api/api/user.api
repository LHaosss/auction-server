// api语法版本
syntax = "v1"

info(
	author: "lhaosss"
	date:   "2023-06-08"
	desc:   "auction-server/user-api"
)

type (
	UserRegisterReq {
		UserName string `json:"user_name"`
		Password string `json:"password"`
	}
	UserRegisterResp {
		Flag bool `json:"flag"`
	}
)

type (
	UserLoginReq {
		UserName string `json:"user_name"`
		Password string `json:"password"`
	}
	UserLoginResp {
		Flag bool `json:"flag"`
	}
)

@server(
	group: user
	prefix: userapi/v1
)

service user-api{
	@doc "注册"
	@handler userRegister
	post /user/register (UserRegisterReq) returns (UserRegisterResp)
	
	@doc "登陆"
	@handler userLogin
	post /user/login (UserLoginReq) returns (UserLoginResp)
}